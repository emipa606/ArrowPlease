  <ThingDef ParentName="RangedWeaponMedieval">
    <defName>Ranged_Crossbow</defName>
    <label>light crossbow</label>
    <description>Relatively simple and cheap, light crossbows deal greater damage than regular bows, in exchange for longer reloading time and shorter range.</description>
    <graphicData>
      <texPath>Things/Weapons/Crossbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
      <WoodLog>50</WoodLog>
      <Steel>20</Steel>
    </costList>
    <statBases>
      <WorkToMake>11000</WorkToMake>
      <Mass>3.2</Mass>
      <AccuracyTouch>0.86</AccuracyTouch>
      <AccuracyShort>0.76</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>2.05</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>MedievalRanged</li>
    </weaponTags>
    <recipeMaker>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
      <researchPrerequisite>Crossbow</researchPrerequisite>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrow_Crossbow</defaultProjectile>
        <warmupTime>0.90</warmupTime>
        <range>25</range>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
