<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>Bowshort_Flame</defName>
    <label>short bow(flaming arrow)</label>
    <description>A simple short selfbow made from a single piece of wood, which allows you to shoot out flaming arrows.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/BowShort</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Weapons/BowShortF</uiIconPath>
    <soundInteract>Bow_Small</soundInteract>
    <costList>
      <WoodLog>30</WoodLog>
      <Cloth>15</Cloth>
    </costList>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>2400</WorkToMake>
      <Mass>0.8</Mass>
      <AccuracyTouch>0.60</AccuracyTouch>
      <AccuracyShort>0.48</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.12</AccuracyLong>
      <RangedWeapon_Cooldown>2.15</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedBasic</li>
      <li>FlamingBasic</li>
    </weaponTags>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>2</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Arrowshort_Flame</defaultProjectile>
        <warmupTime>1.35</warmupTime>
        <range>21</range>
        <soundCast>Bow_Small</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Arrowshort_Flame</defName>
    <label>shortbow flaming arrow</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
			<li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offset>(0,0,0)</offset>
      </li>
    </comps>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Flaming_Arrow</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <speed>35</speed>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
    <tickerType>Normal</tickerType>
  </ThingDef>

