<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<ThingDef ParentName="BaseMeleeWeapon">
    <defName>Ranged_Torch</defName>
    <label>throwing torch</label>
    <description>A tool for lighting an area. But why not share your fire with your enemies? Torch is really not something good for throwing, though.</description>
    <graphicData>
      <texPath>Things/Building/Misc/TorchLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <weaponTags>
      <li>NeolithicRangedBasic</li>
      <li>FlamingBasic</li>
    </weaponTags>
    <generateCommonality>1.0</generateCommonality>
    <statBases>
      <WorkToMake>200</WorkToMake>
      <Mass>2.0</Mass>
      <AccuracyTouch>0.18</AccuracyTouch>
      <AccuracyShort>0.06</AccuracyShort>
      <AccuracyMedium>0.01</AccuracyMedium>
      <AccuracyLong>0.01</AccuracyLong>
      <RangedWeapon_Cooldown>0.60</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.4</MoveSpeed>
    </equippedStatOffsets>
    <equippedAngleOffset>-45</equippedAngleOffset>
    <tickerType>Normal</tickerType>
    <costList>
	
        <WoodLog>30</WoodLog>
    </costList>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
			<li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>1.8</fuelConsumptionRate>
        <fuelCapacity>20.0</fuelCapacity>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <destroyOnNoFuel>true</destroyOnNoFuel>
        <initialFuelPercent>1</initialFuelPercent>
      </li>
      <li Class="CompProperties_HeatPusher">
        <heatPerSecond>16</heatPerSecond>
        <heatPushMaxTemperature>28</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offset>(0,0,0.2)</offset>
      </li>
    </comps>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Torch_Torch</defaultProjectile>
        <warmupTime>1.60</warmupTime>
        <range>6</range>
        <soundCast>ThrowGrenade</soundCast>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stick</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.8</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
      </li>
      <li>
        <label>fire</label>
        <capacities>
          <li>TorchBurn</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.2</cooldownTime>
      </li>
      <li>
        <label>fire</label>
        <capacities>
          <li>TorchFlame</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.2</cooldownTime>
        <chanceFactor>0.5</chanceFactor>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>Torch_Torch</defName>
    <label>torch</label>
    <graphicData>
      <texPath>Things/Building/Misc/TorchLamp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Flame</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <speed>20</speed>
    </projectile>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
			<li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_FireOverlay">
        <fireSize>0.4</fireSize>
        <offset>(0,0,0)</offset>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BaseWeapon">
    <defName>Ranged_Slinger</defName>
    <label>sling</label>
