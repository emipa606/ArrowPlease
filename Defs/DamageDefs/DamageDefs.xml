      <li>
        <hediff>Dart_Blowgun</hediff>
        <severityPerDamageDealt>0.06</severityPerDamageDealt>
      </li>
    </additionalHediffs>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been shot to death by a single blowgun.</deathMessage>
    <hediff>Cut</hediff>
    <hediffSkin>Cut</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
  </DamageDef>

  <DamageDef ParentName="Arrow">
    <defName>Ballista</defName>
    <label>bolt</label>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} has been shot to death by a bolt.</deathMessage>
    <hediff>Cut</hediff>
    <hediffSkin>Cut</hediffSkin>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <buildingDamageFactor>3.0</buildingDamageFactor>
  </DamageDef>

  <DamageDef ParentName="BluntBase">
    <defName>Trebuchet</defName>
    <label>stone chunk</label>
